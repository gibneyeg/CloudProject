<div class="container d-flex align-items-center justify-content-center" style="margin-top: -100px; min-height: 100vh;">
  <div class="col-md-4">
    <h2 class="text-center mb-4 fw-normal">Change your password</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <% if flash[:alert].present? %>
        <div class="alert alert-danger mb-4">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { 
                      class: 'form-control rounded mb-3',
                      autocomplete: "new-password"
                    },
                    label_html: { class: 'mb-2' },
                    required: false %>
                    
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { 
                      class: 'form-control rounded mb-3',
                      autocomplete: "new-password"
                    },
                    label_html: { class: 'mb-2' },
                    required: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password", 
                    class: 'btn btn-primary w-100 rounded' %>
      </div>
    <% end %>

  </div>
</div>