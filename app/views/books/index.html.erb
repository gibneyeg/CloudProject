<div class="container py-5">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="mb-0">Discover Books</h1>
        <%= link_to new_book_path, class: "btn btn-primary" do %>
          <i class="bi bi-plus-lg me-2"></i>Add New Book
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-4">
        <div class="book-card">
          <div class="d-flex justify-content-between mb-3">
            <span class="badge bg-light text-primary"><%= book.category&.name %></span>
            <span class="badge <%= book.available? ? 'bg-success' : 'bg-danger' %>">
              <%= book.available? ? 'Available' : 'Borrowed' %>
            </span>
          </div>

          <h4><%= book.title %></h4>
          <p class="text-muted mb-3">by <%= book.author %></p>
          <p class="text-muted"><%= truncate(book.description, length: 100) %></p>

          <div class="d-flex justify-content-between align-items-center mt-4">
            <%= link_to book_path(book), class: "btn btn-outline-primary" do %>
              View Details
            <% end %>
            
            <div>
              <%= link_to edit_book_path(book), class: "btn btn-light me-2" do %>
                <i class="bi bi-pencil"></i>
              <% end %>
              
              <%= button_to book_path(book), method: :delete, 
                  class: "btn btn-light",
                  form: { data: { turbo_confirm: 'Are you sure?' } } do %>
                <i class="bi bi-trash text-danger"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>