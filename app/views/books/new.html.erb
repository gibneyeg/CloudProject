<div class="container">
  <h1>New Book</h1>

  <%= form_with(model: @book, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :author, class: 'form-label' %>
      <%= f.text_field :author, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :isbn, class: 'form-label' %>
      <%= f.text_field :isbn, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :category_id, class: 'form-label' %>
      <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: 'form-select' %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: 'form-label' %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.check_box :available %>
      <%= f.label :available %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', books_path, class: 'btn btn-secondary' %>
  <% end %>
</div>